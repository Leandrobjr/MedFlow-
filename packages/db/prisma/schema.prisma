// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  slug      String   @unique
  status    String   @default("active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users          User[]
  patients       Patient[]
  staff          Staff[]
  appointments   Appointment[]
  medicalRecords MedicalRecord[]
  transactions   Transaction[]
  dailyClosures  DailyClosure[]

  @@map("tenants")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String
  password  String
  role      String   @default("receptionist") // owner, admin, doctor, receptionist
  status    String   @default("active")
  tenantId  String   @map("tenant_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  staffProfile Staff?

  @@map("users")
}

model Patient {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  cpf         String   @unique
  email       String?
  phone       String
  birthDate   DateTime @map("birth_date")
  gender      String?
  address     String?
  city        String?
  state       String?
  zipCode     String?  @map("zip_code")
  tenantId    String   @map("tenant_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  tenant       Tenant          @relation(fields: [tenantId], references: [id])
  appointments Appointment[]
  medicalRecords MedicalRecord[]
  transactions Transaction[]

  @@map("patients")
}

model Staff {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String?  @unique @map("user_id") @db.Uuid
  name           String
  email          String?
  phone          String?
  role           String   // doctor, receptionist, admin, manager
  specialty      String?  // Apenas para médicos
  crm            String?  // Apenas para médicos
  crmState       String?  @map("crm_state")
  tenantId       String   @map("tenant_id") @db.Uuid
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  tenant         Tenant          @relation(fields: [tenantId], references: [id])
  user           User?           @relation(fields: [userId], references: [id])
  appointments   Appointment[]
  medicalRecords MedicalRecord[]
  transactions   Transaction[]
  closedCaixas   DailyClosure[]

  @@map("staff")
}

model Appointment {
  id          String   @id @default(uuid()) @db.Uuid
  patientId   String   @map("patient_id") @db.Uuid
  staffId     String   @map("staff_id") @db.Uuid
  tenantId    String   @map("tenant_id") @db.Uuid
  startTime   DateTime @map("start_time")
  endTime     DateTime @map("end_time")
  status      String   @default("scheduled")
  type        String   @default("consultation")
  observations String?  @db.Text
  
  googleEventId String? @map("google_event_id")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  patient     Patient  @relation(fields: [patientId], references: [id])
  staff       Staff    @relation(fields: [staffId], references: [id])
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  medicalRecord MedicalRecord?
  transaction   Transaction?

  @@map("appointments")
  @@index([startTime, endTime])
  @@index([staffId, startTime])
}

model MedicalRecord {
  id            String   @id @default(uuid()) @db.Uuid
  appointmentId String   @unique @map("appointment_id") @db.Uuid
  patientId     String   @map("patient_id") @db.Uuid
  staffId       String   @map("staff_id") @db.Uuid
  tenantId      String   @map("tenant_id") @db.Uuid
  
  anamnesis     String?  @db.Text
  physicalExam  String?  @map("physical_exam") @db.Text
  diagnosis     String?  @db.Text
  prescription  String?  @db.Text
  conduct       String?  @db.Text
  
  isFinalized   Boolean  @default(false) @map("is_finalized")
  finalizedAt   DateTime? @map("finalized_at")
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  patient       Patient     @relation(fields: [patientId], references: [id])
  staff         Staff       @relation(fields: [staffId], references: [id])
  tenant        Tenant      @relation(fields: [tenantId], references: [id])
  addendums     MedicalAddendum[]

  @@map("medical_records")
}

model MedicalAddendum {
  id              String   @id @default(uuid()) @db.Uuid
  medicalRecordId String   @map("medical_record_id") @db.Uuid
  content         String   @db.Text
  createdAt       DateTime @default(now()) @map("created_at")
  
  medicalRecord   MedicalRecord @relation(fields: [medicalRecordId], references: [id])

  @@map("medical_addendums")
}

model Transaction {
  id            String   @id @default(uuid()) @db.Uuid
  tenantId      String   @map("tenant_id") @db.Uuid
  patientId     String?  @map("patient_id") @db.Uuid // Se for pagamento de consulta
  staffId       String?  @map("staff_id") @db.Uuid // Médico do repasse (opcional aqui)
  appointmentId String?  @unique @map("appointment_id") @db.Uuid
  
  type          String   // income (entrada), expense (saída)
  category      String   // consultation, procedure, office_supply, etc
  amount        Decimal  @db.Decimal(10, 2)
  method        String?  // cash, credit_card, debit_card, pix
  description   String?
  status        String   @default("completed") // completed, pending, cancelled
  
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  tenant        Tenant      @relation(fields: [tenantId], references: [id])
  patient       Patient?    @relation(fields: [patientId], references: [id])
  staff         Staff?      @relation(fields: [staffId], references: [id])
  appointment   Appointment? @relation(fields: [appointmentId], references: [id])

  @@map("transactions")
}

model DailyClosure {
  id              String   @id @default(uuid()) @db.Uuid
  tenantId        String   @map("tenant_id") @db.Uuid
  closedById      String   @map("closed_by_id") @db.Uuid // Quem fechou o caixa
  
  date            DateTime @db.Date // Dia referente ao caixa
  totalIncome     Decimal  @map("total_income") @db.Decimal(10, 2)
  totalExpense    Decimal  @map("total_expense") @db.Decimal(10, 2)
  netBalance      Decimal  @map("net_balance") @db.Decimal(10, 2)
  
  observations    String?  @db.Text
  status          String   @default("closed") // closed
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  closedBy        Staff    @relation(fields: [closedById], references: [id])

  @@unique([tenantId, date])
  @@map("daily_closures")
}
