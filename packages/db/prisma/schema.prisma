// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  slug      String   @unique
  status    String   @default("active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users        User[]
  patients     Patient[]
  staff        Staff[]
  appointments Appointment[]

  @@map("tenants")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String
  password  String
  role      String   @default("receptionist") // owner, admin, doctor, receptionist
  status    String   @default("active")
  tenantId  String   @map("tenant_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  staffProfile Staff?

  @@map("users")
}

model Patient {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  cpf         String   @unique
  email       String?
  phone       String
  birthDate   DateTime @map("birth_date")
  gender      String?
  address     String?
  city        String?
  state       String?
  zipCode     String?  @map("zip_code")
  tenantId    String   @map("tenant_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  tenant       Tenant        @relation(fields: [tenantId], references: [id])
  appointments Appointment[]

  @@map("patients")
}

model Staff {
  id             String   @id @default(uuid()) @db.Uuid
  userId         String?  @unique @map("user_id") @db.Uuid
  name           String
  email          String?
  phone          String?
  role           String   // doctor, receptionist, admin, manager
  specialty      String?  // Apenas para médicos
  crm            String?  // Apenas para médicos
  crmState       String?  @map("crm_state")
  tenantId       String   @map("tenant_id") @db.Uuid
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  tenant         Tenant        @relation(fields: [tenantId], references: [id])
  user           User?         @relation(fields: [userId], references: [id])
  appointments   Appointment[]

  @@map("staff")
}

model Appointment {
  id          String   @id @default(uuid()) @db.Uuid
  patientId   String   @map("patient_id") @db.Uuid
  staffId     String   @map("staff_id") @db.Uuid // O médico/profissional
  tenantId    String   @map("tenant_id") @db.Uuid
  startTime   DateTime @map("start_time")
  endTime     DateTime @map("end_time")
  status      String   @default("scheduled") // scheduled, confirmed, cancelled, attended, no_show
  type        String   @default("consultation") // consultation, return, procedure
  observations String?  @db.Text
  
  // Google Calendar Integration
  googleEventId String? @map("google_event_id")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  patient     Patient  @relation(fields: [patientId], references: [id])
  staff       Staff    @relation(fields: [staffId], references: [id])
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  @@map("appointments")
  @@index([startTime, endTime])
  @@index([staffId, startTime])
}
